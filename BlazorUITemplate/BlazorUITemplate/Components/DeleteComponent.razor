@using BlazorUITemplate.Data
@using BlazorUITemplate.Pages
@using BlazorUITemplate.Services
@inject EventService EventService
<br/>
<div class="panel">
    <button type="button" class="btn btn-outline-danger" @onclick="ClearAll">Clear All</button>
    <button type="button" class="btn btn-outline-secondary" @onclick="ClearSelected">Remove Selected</button>
    @*
    <i class="material-icons" type="button" @onclick="ClearSelected" style="font-size:48px;color:red">delete</i>
    *@
    </div>
@code {
    
    private async Task ClearAll()
    {
        await EventService.OnClearAllEvent();
    }

    private void ClearSelected()
    {
        EventService.OnRemoveSelectedEvent ();
    }
}