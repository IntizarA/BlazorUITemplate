@page "/Management"
@using BlazorUITemplate.Components
@using BlazorUITemplate.Data
@using BlazorUITemplate.Enums
@using BlazorUITemplate.Services

<Container Buttons="Buttons" Inputs="Inputs" Images="Images">
    <ToolbarList></ToolbarList>
    <DeleteComponent></DeleteComponent>
    <DashboardList></DashboardList>
</Container>

@code {
    public List<ButtonModel> Buttons { get; set; } = new();
    public List<InputModel> Inputs { get; set; } = new();
    public List<ImageModel> Images { get; set; } = new();

    protected override void OnInitialized()
    {
        Buttons = InitializeButtons();
        Inputs = InitializeInputs();
        Images = InitializeImages();
    }

    private List<ButtonModel> InitializeButtons() => new List<ButtonModel>
    {
        new ButtonModel
        {
            Name = "Yellow",
            IsDraggable = true,
            ButtonColor = ButtonColor.Yellow,
            ButtonClass = ButtonColorExtensions.ToCssClass (ButtonColor.Yellow)
        },
        new ButtonModel
        {
            Name = "Blue",
            IsDraggable = true,
            ButtonColor = ButtonColor.Blue,
            ButtonClass = ButtonColorExtensions.ToCssClass (ButtonColor.Blue)
        }
    };

    private List<InputModel> InitializeInputs() => new List<InputModel>
    {
        new InputModel
        {
            IsDraggable = true,
            Placeholder = "Input"
        }
    };

    private List<ImageModel> InitializeImages() => new List<ImageModel>
    {
        new ImageModel
        {
            IsDraggable = true,
            Url = "BlazorUITemplate/wwwroot/icon-192.png"
        }
    };
}